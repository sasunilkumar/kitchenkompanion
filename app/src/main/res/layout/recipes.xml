<!--        android:layout_weight="1" />-->

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/recipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hammersmith_one"
                android:paddingLeft="40dp"
                android:paddingTop="20dp"
                android:text="Recipe List"
                android:textColor="@color/black"
                android:textSize="50sp" />

            <View
                android:id="@+id/list_spacer"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/textView2"/>

            <com.google.android.material.search.SearchBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="@color/white"
                app:queryHint="Search for a recipe">
            </com.google.android.material.search.SearchBar>

            <View
                android:id="@id/list_spacer"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:visibility="invisible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/recipe_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/pastel_purple"
                app:cardCornerRadius="30dp"
                app:contentPadding="20dp"
                app:contentPaddingLeft="40dp"
                app:contentPaddingRight="40dp">

                <LinearLayout
                    android:id="@+id/layouts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/recipe_1_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/hammersmith_one"
                            android:text="Apple Pie"
                            android:textColor="@color/black"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrow_down_1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_keyboard_arrow_down_24"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/arrow_up_1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_keyboard_arrow_up_24"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/recipe_1_iconImageView_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="45dp"
                            android:src="@mipmap/halal_round" />

                        <ImageView
                            android:id="@+id/recipe_1_iconImageView_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/recipe_1_iconImageView_1"
                            android:paddingLeft="10dp"
                            android:src="@mipmap/gluten_free_round" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/ratingBar1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/recipe_1_iconImageView_2"
                            android:numStars="3"
                            android:progressTint="@color/white"
                            style="@style/RatingTheme"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/recipe_1_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/timeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="horizontal"
                            android:paddingTop="20dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_vertical|start">

                                <TextView
                                    android:id="@+id/prepTime1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Prep Time"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="24sp"
                                    android:gravity="center_vertical"
                                    />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/prepTimeLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="min."
                                    android:paddingStart="15dp"
                                    style="@style/InputStyle">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/prepTimeEditText"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:imeOptions="actionDone"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center|center_horizontal">

                                <TextView
                                    android:id="@+id/cookTime1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cook Time"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="24sp"
                                    android:gravity="center"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/cookTimeLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="min."
                                    android:paddingLeft="15dp"
                                    style="@style/InputStyle">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/cookTimeEditText"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:imeOptions="actionDone"/>
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:visibility="invisible" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_vertical|end">

                                <TextView
                                    android:id="@+id/serves1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Serves"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="24sp"
                                    android:gravity="end" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/servingsLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="ppl."
                                    style="@style/InputStyle">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/servingsEditText"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:imeOptions="actionDone"/>
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/ingredients"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Ingredients"
                            android:elevation="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingTop="20dp"
                            android:textSize="24sp" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/hammersmith_one">

                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:text="Butter"
                                    android:textColor="@color/black"
                                    android:textSize="22sp" />

                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp">

                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:text="Flour"
                                    android:textColor="@color/black"
                                    android:textSize="22sp" />

                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="60dp">

                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:text="Cinnamon"
                                    android:textColor="@color/black"
                                    android:textSize="22sp" />

                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24" />
                            </RelativeLayout>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/instructions"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Instructions"
                            android:elevation="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingTop="5dp"
                            android:textSize="24sp" />

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:text="Preheat the oven to 350 degrees"
                            android:textColor="@color/black"
                            android:textSize="22sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="invisible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/recipe_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/pastel_purple"
                app:cardCornerRadius="30dp"
                app:contentPadding="20dp"
                app:contentPaddingLeft="40dp"
                app:contentPaddingRight="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/hammersmith_one"
                            android:text="Brownies"
                            android:textColor="@color/black"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrow_down_2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_keyboard_arrow_down_24"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/arrow_up_2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_keyboard_arrow_up_24"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/recipe_2_iconImageView_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="45dp"
                            android:src="@mipmap/kosher_round" />

                        <ImageView
                            android:id="@+id/recipe_2_iconImageView_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/recipe_2_iconImageView_1"
                            android:paddingRight="10dp"
                            android:paddingLeft="15dp"
                            android:src="@mipmap/low_sodium_round" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/ratingBar2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/recipe_2_iconImageView_2"
                            android:numStars="3"
                            android:progressTint="@color/white"
                            style="@style/RatingTheme"
                            />
<!--                            <Spinner-->
<!--                                android:id="@+id/ratingSpinner"-->
<!--                                android:layout_width="30dp"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:entries="@array/ratings"-->
<!--                                android:layout_centerVertical="true"-->
<!--                                android:layout_toLeftOf="@id/recipe_2_iconImageView_2"-->
<!--                                android:paddingRight="10dp" />-->
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/recipe_2_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Ingredients"
                            android:textColor="@color/black"
                            android:elevation="5dp"
                            android:textStyle="bold"
                            android:textSize="25sp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:text="Cocoa Powder"
                                    android:textSize="22sp" />

                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp">

                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:text="Sugar"
                                    android:textSize="22sp" />

                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="60dp">

                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:text="Vanilla"
                                    android:textSize="22sp" />

                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="90dp">

                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:text="Oil"
                                    android:textSize="22sp" />

                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/scrollView3"
        app:layout_anchorGravity="center">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            style="@style/Widget.Material3.BottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/medium_cream"
            app:menu="@menu/bot_app_bar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_recipe_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:backgroundTint="@color/light_cream"
            android:contentDescription="@string/Recipe_fab"
            app:srcCompat="@drawable/ic_plus_24" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>