<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    tools:context=".Recipes"
    tools:ignore="ExtraText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <include layout="@layout/toolbar"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recipe List"
                android:fontFamily="@font/hammersmith_one"
                android:paddingTop="20dp"
                android:paddingLeft="40dp"
                android:textSize="50sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="invisible"
                android:id="@+id/list_spacer"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/recipe_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                app:cardBackgroundColor="@color/pastel_orange"
                app:contentPaddingLeft="40dp"
                app:contentPaddingRight="40dp"
                app:contentPadding="20dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:id="@+id/layouts"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Apple Pie"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/hammersmith_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            />
                        <ImageView
                            android:id="@+id/arrow_down"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:visibility="visible"
                            android:src="@drawable/baseline_keyboard_arrow_down_24"
                            android:layout_alignParentRight="true"
                        />
                        <ImageView
                            android:id="@+id/arrow_up"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:visibility="gone"
                            android:src="@drawable/baseline_arrow_up_24"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/recipe_1_layout"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Ingredients"
                            android:textSize="24sp"
                            android:id="@+id/ingredients"
                            />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:textSize="22sp"
                                    android:text="Butter"
                                    />
                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp">
                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:textSize="22sp"
                                    android:text="Flour"
                                    />
                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="60dp">
                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:textSize="22sp"
                                    android:text="Cinnamon"
                                    />
                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24"
                                    />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/recipe_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                app:cardBackgroundColor="@color/pastel_orange"
                app:contentPaddingLeft="40dp"
                app:contentPaddingRight="40dp"
                app:contentPadding="20dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Brownies"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/hammersmith_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            />
                        <ImageView
                            android:id="@id/arrow_down"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:visibility="visible"
                            android:src="@drawable/baseline_keyboard_arrow_down_24"
                            android:layout_alignParentRight="true"
                            />
                        <ImageView
                            android:id="@id/arrow_up"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:visibility="gone"
                            android:src="@drawable/baseline_arrow_up_24"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/recipe_2_layout"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Ingredients"
                            android:textSize="24sp"
                            />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:textSize="22sp"
                                    android:text="Cocoa Powder"
                                    />
                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp">
                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:textSize="22sp"
                                    android:text="Sugar"
                                    />
                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="60dp">
                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:textSize="22sp"
                                    android:text="Vanilla"
                                    />
                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="90dp">
                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:textSize="22sp"
                                    android:text="Oil"
                                    />
                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_plus_24"
                                    />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="invisible"/>

        </LinearLayout>
    </ScrollView>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_recipe_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:contentDescription="@string/Grocery_fab"
            app:srcCompat="@drawable/ic_plus_24"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>