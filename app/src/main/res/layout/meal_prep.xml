<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    tools:context=".MealPrep">
    <include layout="@layout/toolbar"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal Prep"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Current Date" />
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="30dp" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="700px"
        android:layout_height = "wrap_content"
        android:background="@drawable/view_container"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="30dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text=" Overnight Oats \n
        1/2 cup rolled oats (old-fashioned oats) \n
        1/2 cup milk (dairy or plant-based) \n
        1/4 cup yogurt (Greek yogurt works well) \n
        Sweetener of choice (such as honey, maple syrup, or agave syrup), to taste \n
        Optional add-ins: fruits, nuts, seeds, spices (e.g., chia seeds, sliced bananas, berries, almonds, cinnamon)"/>
    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_grocery_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:contentDescription="@string/Grocery_fab"
            app:srcCompat="@drawable/ic_plus_24"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>