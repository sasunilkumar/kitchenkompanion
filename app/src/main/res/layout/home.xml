<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_cream"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    tools:context=".InventoryList">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle">
            <TextView
                android:id="@+id/textView2"
                android:paddingTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hammersmith_one"
                android:textColor="#000000"
                android:paddingStart="50dp"
                android:text="Kitchen Kompanion"
                android:textSize="55sp"
                tools:ignore="RtlSymmetry" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbarAlwaysDrawHorizontalTrack="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider"
                    android:orientation="horizontal"
                    android:paddingStart="50dp"
                    android:paddingBottom="20dp"
                    android:showDividers="middle">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/user1"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:background="@drawable/user_icon"
                        android:tint="@color/blue_500" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/user2"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:background="@drawable/user_icon"
                        android:backgroundTint="@color/blue_500" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/user3"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:background="@drawable/user_icon"
                        android:backgroundTint="@color/blue_500" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/user4"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:background="@drawable/user_icon"
                        android:backgroundTint="@color/blue_500" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/user5"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:background="@drawable/user_icon"
                        android:backgroundTint="@color/blue_500" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="700px"
                android:layout_height="420px"
                android:layout_gravity="center_horizontal"
                android:divider="@drawable/divider"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                android:showDividers="middle">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Inventory"
                    android:layout_width="300px"
                    android:layout_height="410px"
                    android:layout_weight="1"
                    android:background="@drawable/view_container"
                    app:backgroundTint="@color/pastel_red"
                    android:text="@string/inventory"
                    android:fontFamily="@font/hammersmith_one"
                    android:textAllCaps="false"
                    android:textSize="45sp"
                    android:textColor="#000000"
                    app:icon="@drawable/outline_kitchen_24"
                    app:iconTint="#000000"
                    app:iconPadding="20dp"
                    app:iconGravity="textTop"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Recipes"
                    android:layout_width="300px"
                    android:layout_height="410px"
                    android:layout_weight="1"
                    android:background="@drawable/view_container"
                    android:fontFamily="@font/hammersmith_one"
                    android:textAllCaps="false"
                    android:text="Recipes"
                    android:textSize="45sp"
                    android:textColor="#000000"
                    app:backgroundTint="@color/pastel_orange"
                    app:icon="@drawable/recipes_vec_icon"
                    app:iconTint="#000000"
                    app:iconPadding="20dp"
                    app:iconGravity="textTop"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="700px"
                android:layout_height="420px"
                android:layout_gravity="center_horizontal"
                android:divider="@drawable/divider"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                android:showDividers="middle">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Grocery"
                    android:layout_width="300px"
                    android:layout_height="410px"
                    android:layout_weight="1"
                    android:background="@drawable/view_container"
                    android:fontFamily="@font/hammersmith_one"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:backgroundTint="@color/pastel_yellow"
                    app:icon="@drawable/grocery_vec_icon"
                    app:iconTint="#000000"
                    app:iconGravity="textTop"
                    app:iconPadding="20dp"
                    android:text="Groceries"
                    android:textSize="45sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/MealPrep"
                    android:layout_width="300px"
                    android:layout_height="410px"
                    android:layout_weight="1"
                    android:background="@drawable/view_container"
                    android:fontFamily="@font/hammersmith_one"
                    android:textAllCaps="false"
                    android:text="Meal Prep"
                    android:textColor="#000000"
                    app:backgroundTint="@color/pastel_green"
                    app:icon="@drawable/calendar_vec_icon"
                    app:iconPadding="20dp"
                    app:iconTint="#000000"
                    app:iconGravity="textTop"
                    android:textSize="45sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            style="@style/Widget.Material3.BottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/medium_cream"
            app:menu="@menu/bot_app_bar"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>